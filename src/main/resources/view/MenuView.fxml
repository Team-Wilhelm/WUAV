<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="gridPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="600.0" minWidth="1350.0" styleClass="background" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controller.MenuController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="10.0" />
        <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="10.0" percentWidth="90.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.rowSpan="7" style="-fx-background-color: white" >
            <HBox>
                <ImageView fx:id="imgLogo" fitHeight="75" fitWidth="75" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER" style="-fx-shape: 'https://www.wuav.dk/wp-content/uploads/2022/02/WUAV_pos_payoff_1linie_outline.svg'">
                    <!-- fitHeight="${logoRoot.height}" fitWidth="${logoRoot.width}" -->
                    <!--  ^^  bind to size of node with fx:id="root" ^^  -->
                    <image>
                        <Image url="https://www.wuav.dk/wp-content/uploads/2022/02/WUAV_pos_payoff_1linie_outline.svg"/>
                    </image>
                </ImageView>
            </HBox>
            <HBox>
                <MFXButton fx:id="btnEmployees" contentDisplay="TOP" HBox.hgrow="ALWAYS"
                           onAction="#btnEmployeesAction" styleClass="menuButtons" text="Employees">
                    <graphic>
                        <ImageView fx:id="imgEmployees" fitHeight="150.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <!-- <Image url="@../images/icons/employee.png" /> -->
                            </image>
                        </ImageView>
                    </graphic>
                </MFXButton>
            </HBox>
            <HBox>
                <MFXButton fx:id="btnDocuments" contentDisplay="TOP" HBox.hgrow="ALWAYS"
                           onAction="#btnDocumentAction" styleClass="menuButtons" text="Documents">
                    <graphic>
                        <ImageView fx:id="imgEvents" fitHeight="150.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <!-- <Image url="@../images/icons/event.png" /> -->
                            </image>
                        </ImageView>
                    </graphic>
                </MFXButton>
            </HBox>
            <HBox>
                <MFXButton fx:id="btnMyProfile" contentDisplay="TOP" HBox.hgrow="ALWAYS"
                           styleClass="menuButtons" text="My profile">
                    <graphic>
                        <ImageView fx:id="imgMyProfile" fitHeight="150.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="https://www.wuav.dk/wp-content/uploads/2022/03/LED-storskraeem-pyloner_sort.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </MFXButton>
            </HBox>
        </VBox>
    </children>
    <padding>
        <Insets left="10.0" top="10.0" />
    </padding>
</GridPane>
